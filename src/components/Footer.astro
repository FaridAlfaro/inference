<link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet"/>

<footer class="footer">
    <div class="footer__container">
      <div class="footer__top">
        <div class="company__info">
          <a href="/" class="company__logo"
            ><img src="/logos/cuadrado.svg" class="imgFooter"
          /></a>
          <p class="company__description">
            Combinamos la pasión por el arte y la tecnología de punta para
            crear soluciones de software minimalistas e innovadoras.
          </p>
          <ul class="footer__list">
            <li class="footer__list-item">
              <a
                href="https://wa.me/3512401402/?text=Hola!%20Quiero%20trabajar%20con%20ustedes"
                class="footer__list-link"
                target="_blank"
              >
                <i class="ri-whatsapp-fill"></i>
              </a>
            </li>
           
          </ul>
          <span class="copyright">&copy;2024 Kyber Studio. Todos los derechos reservados.</span>
        </div>
      </div>
    </div>
  </footer>
<style>
    .footer {
      background-color: var(--black);
    padding-block: 2%;
    color: var(--white);
  }
  
  .footer__container {
    margin: auto;
    padding: 0 1.5rem;
  }
  
  .footer__top {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(20rem, 1fr));
    row-gap: 2rem;
  }
  
  .footer__list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    font-size: 30px;
    margin: 0;
    padding: 0;
  }
  
  .footer__list-item {
    list-style: none;
  }
  
  .footer__list-link {
    text-decoration: none;
    color: inherit;
    transition: color 0.25s;
  }
  
  .footer__list-link:hover {
    color: #2FB7DB;
  }
  
  .company__info {
    grid-column: 1/-1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .company__description{
    font-size: 20px;
  }
  
  .imgFooter{
    filter: invert(1);
    height: 5vh;
  }
  
  .company__info ul {
    flex-direction: row;
  }
  
  .copyright {
    margin-top: auto;
    font-size: 14px;
  }
  @media (max-width: 700px) {
    .imgFooter{
      height: 5vh;
    }
    .company__description{
      font-size: 1em;
    }
  }
</style>