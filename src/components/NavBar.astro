<style>
  .hamburguesa{
    display: none;
  }
  .link {
        color: var(--white);
        font-family: sans-serif;
        /* letter-spacing: 2px; */
        /* text-transform: uppercase; */
        width: fit-content;
        position: relative; /* Añadido para el posicionamiento del pseudo-elemento */
    }
    .link:hover {
        transition: opacity ease 0.5s;
    }
    .link::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -2px; /* Controla la distancia del subrayado respecto al texto */
        width: 0; /* Ancho inicial del subrayado */
        height: 2px; /* Grosor del subrayado */
        background-color: var(--white); /* Color del subrayado */
        transition: width 0.3s; /* Efecto de transición para el ancho */
        
      }

    .link:hover::after {
        width: 100%; /* Ancho completo al hacer hover */
    }
    .logo{
        height: 60px;
        /* fill: var(--white); */
    }
    nav {
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: space-between;
    top: 0;
    width: 90%;
    height: 60px;
    padding: 1% 5%;
    z-index: 3;
    animation: fondo linear both;
    animation-timeline: scroll(block);
    animation-range: entry 15% cover 111vh;


  ul {
    margin: 0;
    margin-top: 6.33px;
    list-style-type: none;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2em;
  }
  li {
    transition: all .2s;
    &:last-child {
      padding-right: 0;
    }
  }
  a {
    color: var(--white);
    font-size: clamp(14px, 3vh, 18px);
    text-decoration: none;
    transition: all .3s;
    animation: textos linear both;
    animation-timeline: scroll(block);
    /* animation-range: entry 15% cover 111vh; */
    fill: var(--white);
    
  }
}

@keyframes fondo {
  from {
    background: transparent;
  }
  to {
    /* From https://css.glass */
    background: rgba(255, 255, 255, 0.09);
    backdrop-filter: blur(7px);
    -webkit-backdrop-filter: blur(7px);
  }
}

@media (max-width: 700px) {
  .logo{
    width: 50vw;
  }
  .menu-regular{
    display: none;
  }
  .hamburguesa{
    display: block;
  }
  nav{
    animation: none;
  }

}
</style>