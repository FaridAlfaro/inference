<form data-netlify="true" netlify-honeypot="bot-field" name="Pymes" method="POST" action="/success">
    <input type="hidden" name="bot-field" />
    <div style="display: flex; justify-content: space-between;">
      <div style="width: calc(50% - 4px);">
        <label for="nombre">Tú nombre: <input type="text" id="nombre" name="nombre" required></label>
      </div>
      <div style="width: calc(50% - 4px);">
        <label for="nombre_empresa">La empresa a postular: <input type="text" id="nombre_empresa" name="empresa" required></label>
      </div>
    </div>
    <label for="email">Redes (Instagram, facebook, etc):<input type="text" id="redes" name="redes" required></label>
    <label for="telefono">Tú telefono:<input type="text" id="telefono" name="telefono" required></label>
    <label for="ciudad">Ciudad: <input type="text" id="ciudad" name="ciudad" required></label>
    <label for="about">Contanos un poco de ellos y porque crees que necesitan nuestra ayuda: <textarea id="about" name="about" required></textarea>
    <button type="submit">Enviar</button>
  </form>
  
  <style>
      *{
          color: white;
      }
      #servicios{
          background-color: transparent;
          font-weight: bold;
          font-family: sans-serif;
          border: none;
          margin: 5% 0;
          width: 100%;
          color: var(--white);
  
      }
      #servicios:focus{
          text-align: left;
          transition: text-align ease .5s;
          color: var(--black);
  
      }
      #about{
        height: 200px;
      }
      form {  
              position: relative;
              width: 100%;
              font-weight: normal;
              letter-spacing: .1cap;
              font-style: italic;
              font-size: 16px;
          }
          input[type="text"], textarea, input[type="email"] {
              width: 100%; /* Resta 16px para compensar el padding */
              padding: 8px;
              margin-bottom: 10px;
              border: none;
              border-bottom: 2px solid #efefefa7;
              box-sizing: border-box;
              background-color: transparent; /* Fondo transparente */
              transition: background-color 0.3s, border-color 0.3s; /* Efecto de transición */
          }
          input[type="text"]:hover, textarea:hover {
              border-color: var(--white); /* Cambia el color del borde al hacer hover */
          }
          input[type="email"]:hover, textarea:hover {
              border-color: var(--white); /* Cambia el color del borde al hacer hover */
          }
          button {
              letter-spacing: 2px;
              width: 50%;
              background-color: transparent;
              color: var(--white);
              padding: 10px 20px;
              border: solid 1px;
              border-radius: 14px;
              cursor: pointer;
              transition: all ease .5s;
  
          }
          input[type="submit"]:hover {
              background-color: var(--white);
              color: var(--black);
          }
          @media (max-width: 700px) {
              input[type="submit"] {
              width: 100%;
              }
          }
  </style>