---
import Boton from "../interface/Boton.astro";

---
<section>
	<div class="slider-container">
		<div class="title">
			<h2 class="sep-title">
				Nuestros servicios
			</h2>
			<p>
				Lorem ipsum dolor sit amet consectetur adipisicing elit. Omnis, odit.
			</p>
			<div class="boton" style="width: 30%; font-size: .8em !important">
				<Boton text="Saber +" bottom="0%" left="5%" url="/servicios"/>
			</div>
		</div>
		<div class="slider">
			<div class="card card1"></div>
			<div class="card card2"></div>
			<div class="card card3"></div>
			<div class="card card4"></div>
		</div>
		<button class="prev">←</button>
		<button class="next">→</button>
	</div>
</section>

<script>

	document.addEventListener('DOMContentLoaded', function() {
    const card1 = document.querySelector('.card1') as HTMLElement;
    const card2 = document.querySelector('.card2') as HTMLElement; // Selecciona card2 en lugar de card1
    const card3 = document.querySelector('.card3') as HTMLElement; // Selecciona card3 en lugar de card1
    const card4 = document.querySelector('.card4') as HTMLElement; // Selecciona card4 en lugar de card1
    const prevBtn = document.querySelector('.prev') as HTMLElement;
    const nextBtn = document.querySelector('.next') as HTMLElement;
    let currentCardIndex = 0;

    // Función para avanzar al siguiente slide
    function nextSlide() {
        if (currentCardIndex == 0) {
            card1.style.opacity = "0";
            setTimeout(() => {
                card1.style.display = "none";
            }, 500);
        } else if (currentCardIndex == 1) {
            card2.style.opacity = "0";
            setTimeout(() => {
                card2.style.display = "none";
            }, 500);
        } else if (currentCardIndex == 2) {
            card3.style.opacity = "0";
            setTimeout(() => {
                card3.style.display = "none";
            }, 500);
        } 
		else{
			return
		}
        currentCardIndex++;
    }

    function prevSlide() {
    if (currentCardIndex > 0) {
        currentCardIndex--;
        if (currentCardIndex == 0) {
            card1.style.display = "block";
            setTimeout(() => {
                card1.style.opacity = "1";
            }, 500);
        } else if (currentCardIndex == 1) {
            card2.style.display = "block";
            setTimeout(() => {
                card2.style.opacity = "1";
            }, 500);
        } else if (currentCardIndex == 2) {
            card3.style.display = "block";
            setTimeout(() => {
                card3.style.opacity = "1";
            }, 500);
        } else if (currentCardIndex == 3) {
            card4.style.display = "block";
            setTimeout(() => {
                card4.style.opacity = "1";
            }, 500);
        }
    }
}

    // Event listeners para los botones
    nextBtn.addEventListener('click', nextSlide);
    prevBtn.addEventListener('click', prevSlide);
});
</script>
<style>
	section{
		overflow: hidden;
		box-sizing: border-box;
		background: rgba(0, 0, 0, 0);
		box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
		backdrop-filter: blur(2px);
		-webkit-backdrop-filter: blur(5px);
		animation: desvaneceraaa linear both;
        animation-timeline: view();
        animation-range: entry 0vh cover 100vh;
        margin: 10% 0;
	}
	@keyframes desvaneceraaa {
		0% {
			opacity: 0;
			filter: blur(40px);
            /* backdrop-filter: blur(20px); */
		}
		100% {
			opacity: 1;
		}
	}
	.title{
		display: flex;
		flex-direction: column;
		margin-left: 5%;
		position: relative;
		width: 50vw;
		height: auto;
		color: var(--white);
	}
	.sep-title{
        color: var(--white);
        font-size: clamp(20px, 3em, 60px);
        font-weight: normal;
    }
	.slider-container {
	width: 100%;
	height: 110vh;
	display: flex;
	justify-content: center;
	align-items: center;
  	position: relative;
	}
.slider {
	display: flex;
	width: 60%;
	transition: transform 0.5s ease;
}

.card {
	margin-right: 2%;
	min-height: 60vh;
	min-width: calc(60vh / 1.6180);
	transition: opacity 0.5s ease;
}
.card1{
	background-image: url("/public/cardtemporal/1.svg");
	background-size: contain;
}
.card2{
	background-image: url("/public/cardtemporal/2.svg");
	background-size: contain;

}
.card3{
	background-size: contain;
	background-image: url("/public/cardtemporal/3.svg");
}

.card4{
	background-size: contain;

	background-image: url("/public/cardtemporal/4.svg");
}

button{
	position: absolute;
	border: none;
	background: transparent;
	cursor: pointer;
	font-size: 3em;
	color: var(--white);
	opacity: .5;
	transition: opacity ease .5s;
}
button:hover{
	opacity: 1;
}
.prev {
	top: 85%;
  	right: 10%;
}

.next {
	top: 85%;
  	right: 5%;
}
</style>
