---
interface Props{
    r1: string;
    r2: string;
    r3: string;
    r4: string;
}
const { r1, r2, r3, r4} = Astro.props;
---
<section>
<separador>
    <h2>
        {r1}<br /><span>{r4}</span><span class="animate">{r2}</span><br />{r3}
    </h2>
</separador>
</section>

<style>
    separador {
        display: flex;
        justify-content: center;
        align-items: center;
        color: var(--black);
        margin: 100px 0;
        h2 {
            text-align: center;
            font-family: 'CabinetGrotesk-Variable', sans-serif;
            font-weight: 300;
            font-size: clamp(30px,10vh, 50px);
            /* font-style: italic; */
        }
        span {
            font-style: italic;
            text-transform:lowercase;
            font-weight: bold;
        }
        .animate{
            animation: fade-up linear both;
            animation-timeline: view();
            animation-range: entry 0% cover 50%;
        }
    }
    
    @media (max-width: 700px) {
        separador {
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 50px 0;
            padding: 0;
            h2 {
                font-size: 30px;
            }
        }
    }
</style>
