<section>
    <div class="work-contain">
        <div class="work work1">
            <img src="/works/1.svg" alt="" />
        </div>
    </div>
    <div class="work work2">
        <img src="/works/2.svg" alt="" />
    </div>
    <div class="work work3">
        <img src="/works/3.svg" alt="" />
    </div>
    <a href="/trabajos">
        <div class="work more">
            <h3>MÃ¡s trabajos</h3>
        </div>
