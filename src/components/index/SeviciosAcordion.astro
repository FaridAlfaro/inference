---
import Acordion from "../servicios/Acordion.astro"
---

<section class="contain">
    <section class="section1">
        <div class="title">
            <h1 class="title-text">Nuestros Servicios</h1>
            <h2 class="sub-title">Descubre como podemos ayudarte</h2>
        </div>
        <Acordion/>
    </section>
</section>

<style>
    .contain{
        height: auto;
        width: 100vw;
        background: transparent;
        color: var(--black);
    }
    
    .section1{
        height: 100vh;
        min-height: 120vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0 20%;
        gap: 100px;
        animation: fade-up linear both;
        animation-timeline: view();
        animation-range: entry 20% cover 40%;
    }
    .title{
        width: 100%;
        height: 70%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-image: url('/cards/1.svg');
        filter: invert(1);
        background-repeat: no-repeat;
        background-position-y: 0%;
        background-size: 40%;
    }
    .title-text{
        font-size: clamp(20px, 6vh, 50px);
        text-align: right;
        margin: 0 0 1rem 0;
        filter: invert(1);
    }
    .sub-title{
        font-family: sans-serif;
        filter: invert(1);
        text-align: right;
        font-size: clamp(16px, 10vh, 30px);
        font-style: italic;
        font-weight: normal;
        opacity: .5;
        margin: 0;
        padding: 0;
    }
    .section2{
        height: 100vh;
        width: 100vw;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
    @media (max-width: 700px) {
        .contain{
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .title{
        height: 40%;
        align-items: flex-end;
    }
        .title-text{
        font-size: 30px;
        }
        .sub-title{
            text-align: right;
            font-size: 24px;
        }
        .section1{
            min-height: 100px;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 0;
            width: 90%;
            padding: 0;
        }
    }

</style>